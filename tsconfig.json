{
	"include": ["src"],
	"compilerOptions": {
		"target": "es2016",
		"module": "ES6",
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
		"outDir": "public",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"skipLibCheck": true
	}
}
